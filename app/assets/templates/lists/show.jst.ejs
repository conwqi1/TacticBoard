
<div class="list-show-header" data-list-id="<%= list.id %>">
  <h4><%= list.escape('title') %></h4>
<!--delete list button starts here -->
  <button class="close" id="delete_list" data-id="<%= list.id %>"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
  </button>
</div>

<ul class="cards-container list-group">
<!--all subviews goes here -->
</ul>

<!--add card button starts here-->

<!-- Button trigger modal -->
<button class="btn btn-primary " data-toggle="modal" data-target="#cardButton<%= list.id %>">
    Add card
</button>




<!-- Modal -->
<div class="modal fade" id="cardButton<%= list.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">New Card</h4>
        </div> 
        
      <form id="createCard" data-id="<%= list.escape('id') %>">
        <div class="modal-body">
          <div class="row">
            <div class="col-xs-2">
              <lable for="board_title">Title:</label>
            </div>
            <div class="col-xs-10">
              <input type="text" name="card[title]" id="card_title">
            </div>
          </div>
          <br>

          <div class="row">
            <div class="col-xs-2">
              <lable for="board_title">Description:</label>
            </div>
            <div class="col-xs-10">
              <textarea class="col-xs-10" name="card[description]" id="card_description"></textarea>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <input type="submit" value="create" id="create_card">
        </div>
      </form>

    </div>
  </div>
</div>
<!--Modal ends here -->
