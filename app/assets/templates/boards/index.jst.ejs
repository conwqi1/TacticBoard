<div class='boards-index-title'>
  <h3>My Boards</h3>
</div>

<ul class='boards'>
  <% boards.each(function (board) { %>
    <li>
      <a href="#/boards/<%= board.id %>">
        <span class='shadow'></span>
        <span class='details'> 
         <button type="button" class="close" id="delete_board" data-id="<%= board.id %>"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
         </button>       
          <%= board.escape("title") %>
        </span>
      </a>
    </li>
  <% }); %>
  
  <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Add Board
  </button>
  
  
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">New Board</h4>
        </div>
        <form class="myform">
          <div class="modal-body">
            <div class="row">
              <div class="col-xs-2">
                 <lable for="board_title">Title:</label>
              </div>
              <div class="col-xs-10">
                <input class="col-xs-10" type="text" name="board[title]" id="board_title">
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <input type="submit" value="create" id="creat_board">
          </div>
        </form>
      </div>
    </div>
  </div>
</ul>